<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/videoDetailRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/videoNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:hint="Movie Title"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/previewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoNameTextView"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/ic_default_profile" />

    <TextView
        android:id="@+id/view_count"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoNameTextView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/previewIcon"
        android:hint="42.2K"
        android:lines="1"
        android:textColor="@color/chatmsg"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/view_count"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

        <ImageButton
            android:id="@+id/videoShareBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/black"
            android:src="@drawable/inset_share_menu" />

    </FrameLayout>

</RelativeLayout>